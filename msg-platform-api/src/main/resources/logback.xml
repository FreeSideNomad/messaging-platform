<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <turboFilter class="com.acme.reliable.web.logging.ThreadIdTurboFilter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [T%X{threadId} %thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
