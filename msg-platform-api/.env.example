# API Application Configuration
API_PORT=8080

# Performance Tuning - Netty Thread Pools
# API handles HTTP requests (200 worker threads for high concurrency)
NETTY_WORKER_THREADS=200
NETTY_PARENT_THREADS=8

# Performance Tuning - HikariCP Connection Pool
# API only writes to database (smaller pool than workers)
HIKARI_MAX_POOL_SIZE=100
HIKARI_MIN_IDLE=25

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=reliable
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# IBM MQ Configuration
MQ_HOST=localhost
MQ_PORT=1414
MQ_QMGR=QM1
MQ_CHANNEL=DEV.APP.SVRCONN
MQ_USER=app
MQ_PASS=passw0rd
MQ_APP_PASSWORD=passw0rd
MQ_ADMIN_PASSWORD=passw0rd

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_PORT=9092

# JMS Configuration - IMPORTANT: NO CONSUMERS IN API
JMS_CONSUMERS_ENABLED=false

# Sync Wait Configuration (0s = fully async mode, 1s = wait for response)
SYNC_WAIT_DURATION=0s

# Outbox Sweep Interval (how often to check for unpublished outbox entries)
# API uses fast-path publisher, but still sweeps for failures
OUTBOX_SWEEP_INTERVAL=1s
