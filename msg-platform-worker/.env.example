# Worker Application Configuration
WORKER_ID=worker-1
WORKER_PORT=9090

# Performance Tuning - Netty Thread Pools
# Worker has minimal HTTP (only health checks)
NETTY_WORKER_THREADS=50
NETTY_PARENT_THREADS=4

# Performance Tuning - HikariCP Connection Pool
# Worker does heavy DB access (reads/writes commands, inbox, outbox, DLQ)
HIKARI_MAX_POOL_SIZE=200
HIKARI_MIN_IDLE=50

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=reliable
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# IBM MQ Configuration
MQ_HOST=localhost
MQ_PORT=1414
MQ_QMGR=QM1
MQ_CHANNEL=DEV.APP.SVRCONN
MQ_USER=app
MQ_PASS=passw0rd
MQ_APP_PASSWORD=passw0rd
MQ_ADMIN_PASSWORD=passw0rd

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_PORT=9092

# JMS Configuration - IMPORTANT: CONSUMERS ENABLED IN WORKER
JMS_CONSUMERS_ENABLED=true
JMS_CONCURRENCY=10  # How many concurrent messages to process

# Outbox Sweep Interval (how often to check for unpublished outbox entries)
# Worker sweeps for reply/event messages that failed to publish
OUTBOX_SWEEP_INTERVAL=1s
OUTBOX_BATCH_SIZE=2000
